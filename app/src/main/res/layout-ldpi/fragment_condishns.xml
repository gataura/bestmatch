<?xml version="1.0" encoding="utf-8"?>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:background="#ffcfe2 ">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".fragments.UsloviyaFragment">


            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
                    android:id="@+id/radioGroupLast" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/i_m_a_single_person" android:id="@+id/odin_sovsem_radio_button"
                        android:checked="true" android:clickable="true"/>
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/we_are_a_couple" android:id="@+id/para_sovsem_radio_button" android:clickable="true"/>
            </RadioGroup>

            <Button
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/arrow_right_24_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enter_second_next_button" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintVertical_bias="1.0" android:drawableRight="@drawable/arrow_right_24_icon"
                    app:layout_constraintTop_toBottomOf="@+id/optional_text_view"/>
            <TextView
                    android:text="@string/other_data_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/other_data_text_view" android:textSize="18sp"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/radioGroupLast"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.027" app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="@string/have_house_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableRight="@drawable/home_filled_24"
                    android:id="@+id/est_domik_tview" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/other_data_text_view" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
                    android:textAppearance="@style/TextAppearance.AppCompat" android:enabled="true"
                    android:visibility="visible" android:drawableEnd="@drawable/home_filled_24"
                    android:focusable="true"/>
            <TextView
                    android:text="@string/have_car_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/est_tachka_tview" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/est_domik_tview" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"
                    android:drawableRight="@drawable/car_24" android:drawableEnd="@drawable/car_24"
                    android:clickable="true" android:focusable="true"
                    android:textAppearance="@style/TextAppearance.AppCompat" android:enabled="true"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/have_motorcycle_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/est_motik_tview" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/est_tachka_tview" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
                    android:drawableRight="@drawable/motorcycle_24" android:drawableEnd="@drawable/motorcycle_24"
                    android:checked="false"
                    android:clickable="true"
                    android:textAppearance="@style/TextAppearance.AppCompat" android:enabled="true"
                    android:focusable="true" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/make_it_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/i_want_to_make_clear" android:layout_marginTop="48dp"
                    app:layout_constraintTop_toBottomOf="@+id/est_motik_tview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:ems="10"
                    android:id="@+id/nado_utochnit_field" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/i_want_to_make_clear" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintVertical_bias="0.0"
                    android:maxLength="2000"
                    android:maxLines="8"
                    android:lines="6"/>
            <TextView
                    android:text="@string/optional_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/optional_text_view" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/nado_utochnit_field"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.025"
                    app:layout_constraintVertical_bias="0.0"/>
            <ImageView
                    android:layout_width="197dp"
                    android:layout_height="123dp"
                    android:id="@+id/imageView" app:layout_constraintStart_toEndOf="@+id/radioGroupLast"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/est_domik_tview" android:rotation="20"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.275"
                    app:srcCompat="@drawable/heart_back"/>
            <ImageView
                    android:layout_width="85dp"
                    android:layout_height="61dp"
                    android:id="@+id/imageView5" app:layout_constraintStart_toEndOf="@+id/imageView"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/est_domik_tview"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:rotation="-30" app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintVertical_bias="0.769" app:srcCompat="@drawable/heart_back"/>
            <ImageView
                    android:layout_width="65dp"
                    android:layout_height="62dp"
                    android:id="@+id/imageView6" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView5"
                    app:layout_constraintStart_toStartOf="@+id/imageView5" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="1.0" android:rotation="10"
                    app:srcCompat="@drawable/heart_back"/>
            <ImageView
                    android:layout_width="79dp"
                    android:layout_height="79dp"
                    android:id="@+id/imageView7" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/est_motik_tview"
                    app:layout_constraintStart_toEndOf="@+id/i_want_to_make_clear" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/nado_utochnit_field"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.33"
                    app:layout_constraintVertical_bias="0.666" android:rotation="-40"
                    app:srcCompat="@drawable/heart_back"/>
            <ImageView
                    android:layout_width="138dp"
                    android:layout_height="110dp"
                    android:id="@+id/imageView8" app:layout_constraintTop_toBottomOf="@+id/optional_text_view"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/enter_second_next_button"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.166" app:layout_constraintVertical_bias="1.0"
                    android:rotation="20" app:srcCompat="@drawable/heart_back"/>
            <ImageView
                    android:layout_width="126dp"
                    android:layout_height="75dp"
                    android:id="@+id/imageView9" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/nado_utochnit_field"
                    app:layout_constraintStart_toEndOf="@+id/imageView8" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.837" app:layout_constraintVertical_bias="0.0"
                    android:rotation="-10" app:srcCompat="@drawable/heart_back"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

